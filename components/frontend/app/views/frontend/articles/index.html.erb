<div class="max-w-screen-lg mx-auto">

  <h1>Articles</h1>

  <div id="articles" class="grid grid-cols-3 gap-4">
    <% @articles.each do |article| %>
      <div>
        <div id="<%= dom_id article %>">
          <h2><%= article.title %></h2>
          <p>author: <%= article.author %></p>
          <p>created_at: <%= article.created_at %></p>
        </div>

        <p class="mt-5">
          <%= link_to "Show this article", article, class: "btn btn-sm btn-primary" %>
        </p>
      </div>
    <% end %>
  </div>

</div>